%li[customfield]{ highlightable(dom_id(customfield, :tools)) }
  .tools{ invisible, :id => dom_id(customfield, :tools) }
    %small
      = link_to_edit(customfield, :url => edit_admin_customfield_path(customfield)) + " | "
      = link_to_delete(customfield, :url => admin_customfield_path(customfield))
  %tt
    Label
    %b
      = customfield.field_label
    - if field_type = Customfield.form_field_types[customfield.form_field_type]
      with type
      %b
        = field_type[:name]

    == added #{time_ago_in_words(customfield.created_at)} ago
    = hook(:customfield_bottom, self, :customfield => customfield)
