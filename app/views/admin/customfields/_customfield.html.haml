%li[customfield]{ highlightable(dom_id(customfield, :tools)) }
  .tools{ invisible, :id => dom_id(customfield, :tools) }
    %small
      = link_to_edit(customfield, :url => edit_admin_customfield_path) + " | "
      = link_to_delete(customfield, :url => admin_customfield_path)
  %tt
    Label
    %b
      - if customfield.field_label?
        = customfield.field_label
    name
    %b
      - if customfield.field_name?
        = customfield.field_name
    for table
    %b
      - if customfield.table_name?
        = customfield.table_name.pluralize

    == added #{time_ago_in_words(customfield.created_at)} ago
    = hook(:customfield_bottom, self, :customfield => customfield)
